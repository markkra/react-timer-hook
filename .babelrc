// .babelrc
{
  "presets": [["env", { "modules": false }], "@babel/preset-react"],

  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-destructuring",
        "@babel/plugin-transform-react-inline-elements",
        [
          "@babel/plugin-transform-modules-commonjs",
          {
            "allowTopLevelThis": true
          }
        ]
      ]
    }
  }
}
